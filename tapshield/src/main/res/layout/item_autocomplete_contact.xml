<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="@dimen/ts_common_spacing_xs">
    
    <ImageView
        android:layout_width="@dimen/ts_entourage_destination_item_autocomplete_icon"
        android:layout_height="@dimen/ts_entourage_destination_item_autocomplete_icon"
        android:padding="@dimen/ts_common_spacing_xxs"
        android:src="@drawable/ts_icon_contact"
        android:scaleType="fitCenter"/>
    
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">
        
        <TextView
            android:id="@+id/item_autocomplete_contact_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/ts_entourage_destination_item_autocomplete_text_primary"
            android:layout_margin="@dimen/ts_common_spacing_xxs"
            android:maxLines="1"
            android:ellipsize="end"/>
        
        <TextView
            android:id="@+id/item_autocomplete_contact_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/ts_entourage_destination_item_autocomplete_text_secondary"
            android:layout_marginLeft="@dimen/ts_common_spacing_s"
            android:maxLines="1"
            android:ellipsize="end"/>
    </LinearLayout>
</LinearLayout>
