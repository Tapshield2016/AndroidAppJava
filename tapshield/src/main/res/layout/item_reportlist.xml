<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >
    
    <ImageView
        android:id="@+id/item_reportlist_image"
        android:layout_width="@dimen/ts_fullprofile_picture"
        android:layout_height="@dimen/ts_fullprofile_picture"
        android:scaleType="centerInside"/>

    <TextView
        android:id="@+id/item_reportlist_text"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/ts_common_spacing_xs"
        android:gravity="center_vertical"
        android:maxLines="1"
        android:textSize="@dimen/ts_common_text_s"
        android:textColor="@color/ts_brand_dark"/>
    
</LinearLayout>
