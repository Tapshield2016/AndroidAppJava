<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        
        <TextView
            android:id="@+id/actionbar_main_entourage_text_destination"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.6"
            android:gravity="center"
            android:textSize="@dimen/actionbar_main_entourage_primary"
            android:textColor="@color/ts_brand_dark"
            android:maxLines="1"
            android:ellipsize="end"/>
        
        <TextView
            android:id="@+id/actionbar_main_entourage_text_eta"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.4"
            android:gravity="center"
            android:textSize="@dimen/actionbar_main_entourage_secondary"
            android:textColor="@color/ts_brand_light"/>
    </LinearLayout>
</RelativeLayout>
