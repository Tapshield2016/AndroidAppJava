<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        
        <Button
            android:id="@+id/weightpicker_button_top1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            style="?android:attr/buttonBarButtonStyle"
            android:text="@string/ts_dialog_weightpicker_plus_100"
            android:textColor="@color/ts_brand_dark"/>
        <Button
            android:id="@+id/weightpicker_button_top2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            style="?android:attr/buttonBarButtonStyle"
            android:text="@string/ts_dialog_weightpicker_plus_10"
            android:textColor="@color/ts_brand_dark"/>
        <Button
            android:id="@+id/weightpicker_button_top3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            style="?android:attr/buttonBarButtonStyle"
            android:text="@string/ts_dialog_weightpicker_plus_1"
            android:textColor="@color/ts_brand_dark"/>
    </LinearLayout>
    
    <TextView
        android:id="@+id/weightpicker_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="@dimen/ts_common_text_l"
        android:textColor="@color/ts_gray_dark"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        
        <Button
            android:id="@+id/weightpicker_button_bottom1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            style="?android:attr/buttonBarButtonStyle"
            android:text="@string/ts_dialog_weightpicker_minus_100"
            android:textColor="@color/ts_brand_dark"/>
        <Button
            android:id="@+id/weightpicker_button_bottom2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            style="?android:attr/buttonBarButtonStyle"
            android:text="@string/ts_dialog_weightpicker_minus_10"
            android:textColor="@color/ts_brand_dark"/>
        <Button
            android:id="@+id/weightpicker_button_bottom3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            style="?android:attr/buttonBarButtonStyle"
            android:text="@string/ts_dialog_weightpicker_minus_1"
            android:textColor="@color/ts_brand_dark"/>
    </LinearLayout>
</LinearLayout>
