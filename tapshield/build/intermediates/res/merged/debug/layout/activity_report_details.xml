<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="@dimen/activity_horizontal_margin"
    android:layout_marginRight="@dimen/activity_horizontal_margin"
    android:layout_marginTop="@dimen/activity_vertical_margin"
    android:layout_marginBottom="@dimen/activity_vertical_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >
        
        <TextView
            android:id="@+id/report_text_viewed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/ts_brand_light"
            android:textSize="@dimen/ts_common_text_s"
            android:gravity="left|center_vertical"
            android:drawableLeft="@drawable/ts_icon_checkmark"
            android:layout_marginBottom="@dimen/ts_common_spacing_l"
            android:visibility="gone"/>
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginBottom="@dimen/ts_common_spacing_s"
            android:orientation="horizontal">
            
            <ImageView
                android:id="@+id/report_image_type"
                android:layout_width="@dimen/details_image_type"
                android:layout_height="@dimen/details_image_type"
                android:scaleType="fitCenter"/>
            
            <TextView
                android:id="@+id/report_text_type"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/ts_common_spacing_xs"
                android:textStyle="bold"
                android:textColor="@color/ts_brand_light"
                android:textSize="@dimen/details_text_type_textsize"
                android:gravity="center_vertical|left"/>
        </LinearLayout>
        
        <TextView
            android:id="@+id/report_text_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/ts_common_text_m"
            android:textColor="@color/ts_gray_dark"
            android:drawableLeft="@drawable/ic_drawer"
            android:visibility="gone"/>
        
        <TextView
            android:id="@+id/report_text_datetime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/ts_common_text_m"
            android:textColor="@color/ts_gray_dark"
            android:drawableLeft="@drawable/ic_time"/>     
        
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/ts_common_spacing_m"
            android:text="@string/ts_common_description"
            android:textSize="@dimen/ts_common_text_m"
            style="@style/TapShieldHeader"/>
        
        <TextView
            android:id="@+id/report_text_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/ts_common_text_m"
            android:layout_margin="@dimen/ts_common_spacing_s"
            android:textColor="@color/ts_gray_dark"/>
        
        <TextView
            android:id="@+id/report_text_yourreport"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/ts_reporting_text_yourreport"
            android:textColor="@color/ts_brand_dark"
            android:textSize="@dimen/ts_common_text_m"
            android:layout_margin="@dimen/ts_common_spacing_xs"
            android:visibility="gone"/>
        
        <FrameLayout
			android:id="@+id/report_media_container"
			android:layout_width="match_parent"
			android:layout_height="250dp"
			android:layout_gravity="center">
            
            <ProgressBar
	            android:id="@+id/report_media_loading"
	            android:layout_width="120dp"
	            android:layout_height="120dp"
	            android:indeterminate="true"
	            android:layout_gravity="center"
	            android:visibility="gone"/>
        </FrameLayout>
    </LinearLayout>
</ScrollView>
