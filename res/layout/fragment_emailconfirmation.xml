<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="@dimen/activity_horizontal_margin"
    android:layout_marginRight="@dimen/activity_horizontal_margin"
    android:layout_marginTop="@dimen/activity_vertical_margin"
    android:layout_marginBottom="@dimen/activity_vertical_margin"
    android:weightSum="1.0"
    android:orientation="vertical" >
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:gravity="center">
        
        <EditText
            android:id="@+id/fragment_emailconfirmation_edit_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"/>
        
    </LinearLayout>
    
    <Button
        android:id="@+id/fragment_emailconfirmation_button_complete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="complete verification"/>
    
    <Button
        android:id="@+id/fragment_emailconfirmation_button_resend"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="resend verification email"/>
    
</LinearLayout>
