<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="@dimen/activity_horizontal_margin"
    android:layout_marginRight="@dimen/activity_horizontal_margin"
    android:layout_marginTop="@dimen/activity_vertical_margin"
    android:layout_marginBottom="@dimen/activity_vertical_margin"
    android:weightSum="1.0"
    android:orientation="vertical" >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/ts_gray_dark"
        android:text="@string/ts_fragment_phoneconfirmation_text_instructions_top"/>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5">
        
        <EditText
	        android:id="@+id/fragment_phoneconfirmation_edit_phone"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:gravity="center"
	        android:inputType="phone"
	        android:drawableLeft="@drawable/ic_create_phone"
            android:textColor="@color/ts_brand_light"
            android:textColorHint="@color/ts_gray_dark"/>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/ts_common_spacing_xs"
        android:gravity="center"
        android:textColor="@color/ts_gray_dark"
        android:text="@string/ts_fragment_phoneconfirmation_text_instructions_bottom"/>
    
    <EditText
        android:id="@+id/fragment_phoneconfirmation_edit_code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:maxLength="4"
        android:inputType="number"
        android:hint="@string/ts_common_code"/>
    
    <Button
        android:id="@+id/fragment_phoneconfirmation_button_resend"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/ts_brand_dark"
        android:text="@string/ts_fragment_phoneconfirmation_button_resend"/>
    
</LinearLayout>
