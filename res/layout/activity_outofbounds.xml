<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.6"
        android:gravity="center"
        android:text="You\'re currently outside the boundaries or hours of operation of your organization! Tap the button below:"
        android:textColor="@color/ts_alert_red"
        android:textSize="@dimen/ts_common_text_l"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.4">
        
        <Button
            android:id="@+id/outofbounds_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/ts_alert_red"
            android:textSize="@dimen/ts_common_text_l"
            android:gravity="center"
            android:layout_gravity="center"/>
    </FrameLayout>
</LinearLayout>
