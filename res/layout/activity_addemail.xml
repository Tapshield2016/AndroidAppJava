<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/ts_common_spacing_s">
    
    <LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="vertical">
	    
	    <TextView
	        android:id="@+id/addemail_text_instructions"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_margin="@dimen/ts_common_spacing_xxs"
	        android:gravity="center"
	        android:textColor="@color/ts_gray_dark"/>
	    
	    <EditText
	        android:id="@+id/addemail_edit_email"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:inputType="textEmailAddress"
	        android:drawableLeft="@drawable/ic_create_email"
	        android:textColor="@color/ts_brand_light"
	        android:textColorHint="@color/ts_gray_dark"
	        android:layout_marginTop="@dimen/ts_common_spacing_m"/>
	    
	    <TextView
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_margin="@dimen/ts_common_spacing_xxs"
	        android:gravity="center"
	        android:textColor="@color/ts_gray_dark"
	        android:text="@string/ts_fragment_emailconfirmation_instruction_bottom"/>
	    
	    <Button
	        android:id="@+id/addemail_button_add"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="@dimen/ts_common_spacing_xs"
	        android:text="Add Email"
	        style="@style/TapShieldButton"/>
	
	    <Button
	        android:id="@+id/addemail_button_resend"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="@dimen/ts_common_spacing_xs"
	        android:text="@string/ts_fragment_emailconfirmation_resend"
	        style="@style/TapShieldButton"/>
	    
	    <Button
	        android:id="@+id/addemail_button_complete"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="@dimen/ts_common_spacing_xs"
	        android:text="@string/ts_fragment_emailconfirmation_complete"
	        style="@style/TapShieldButton"/>
	    
	</LinearLayout>
    
</ScrollView>
