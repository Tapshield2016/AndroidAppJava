<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="@dimen/activity_horizontal_margin"
    android:layout_marginRight="@dimen/activity_horizontal_margin"
    android:layout_marginTop="@dimen/activity_vertical_margin"
    android:layout_marginBottom="@dimen/activity_vertical_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        
        <!-- type header -->
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginBottom="@dimen/ts_common_spacing_s"
            android:orientation="horizontal">
            
            <ImageView
                android:id="@+id/report_image_type"
                android:layout_width="@dimen/details_image_type"
                android:layout_height="@dimen/details_image_type"
                android:scaleType="fitCenter"/>
            
            <TextView
                android:id="@+id/report_text_type"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/ts_common_spacing_xs"
                android:textStyle="bold"
                android:textColor="@color/ts_brand_light"
                android:textSize="@dimen/details_text_type_textsize"
                android:gravity="center_vertical|left"/>
        </LinearLayout>
        
        <!-- extra info -->
        
        <TextView
            android:id="@+id/report_text_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/ts_gray_dark"
            android:drawableLeft="@drawable/ic_drawer"
            android:visibility="gone"/>
        
        <TextView
            android:id="@+id/report_text_datetime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/ts_gray_dark"
            android:drawableLeft="@drawable/ic_time"/>        
        
        <CheckBox
            android:id="@+id/report_checkbox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingTop="@dimen/ts_common_spacing_s"
            android:paddingBottom="@dimen/ts_common_spacing_s"
            android:textColor="@color/ts_gray_dark"
            android:text="@string/ts_reporting_checkbox_anonymous" />
        
        <!-- description -->
        
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/ts_common_spacing_m"
            android:text="@string/ts_common_description"
            style="@style/TapShieldHeader"/>
        
        <EditText
            android:id="@+id/report_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        
        <TextView
            android:id="@+id/report_text_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/ts_gray_dark"
            android:visibility="gone"/>

        <!-- media -->
        
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/ts_common_spacing_m"
            android:text="@string/ts_reporting_media_header"
            style="@style/TapShieldHeader"/>
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            
            <Button
                android:id="@+id/report_button_media_audio"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="@string/ts_reporting_media_audio"
                android:gravity="center"/>
            
            <Button
                android:id="@+id/report_button_media_image"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="@string/ts_reporting_media_image"/>
            
            <Button
                android:id="@+id/report_button_media_video"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="@string/ts_reporting_media_video"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
