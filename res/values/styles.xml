<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
    
    
    <style name="TapShieldHoloLightTheme" parent="@android:style/Theme.Holo.Light">
        <item name="android:actionBarStyle">@style/TapShieldActionBar</item>
        <item name="android:actionMenuTextColor">@color/ts_brand_light</item>
        <item name="android:windowBackground">@color/ts_activity_background</item>
        <item name="android:typeface">normal</item>
        <!-- <item name="android:homeAsUpIndicator">@drawable/ic_up</item> -->
    </style>
    
    <style name="TapShieldActionBar" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">#ffffff</item>
        <item name="android:titleTextStyle">@style/TapShieldActionBarTitle</item>
    </style>
    
    <style name="TapShieldActionBarTitle" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@color/ts_brand_light</item>
    </style>
    
    <style name="TapShieldHeader" parent="@android:style/Widget.Holo.Light.TextView">
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/ts_gray_dark</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:drawableBottom">@drawable/ts_header</item>
    </style>
    
    <style name="TapShieldHoloLightTheme.Trasparent">
        <item name="android:windowIsTranslucent">true</item>
	    <item name="android:windowBackground">@android:color/transparent</item>
	    <item name="android:windowContentOverlay">@null</item>
	    <!-- <item name="android:windowNoTitle">true</item> -->
	    <item name="android:backgroundDimEnabled">false</item>
    </style>
    
    <style name="TapShieldProfileButton" parent="@android:style/Widget.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/ts_common_spacing_xxs</item>
        <item name="android:textSize">@dimen/ts_common_text_m</item>
        <item name="android:drawablePadding">@dimen/ts_common_spacing_s</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:background">@drawable/ts_background_imagebutton</item>
    </style>
    
    <style name="TapShieldMapClusterTextBase" parent="@android:style/TextAppearance">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center_horizontal|top</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="TapShieldMapClusterTextRed" parent="@style/TapShieldMapClusterTextBase">
        <item name="android:textColor">@color/ts_alert_red</item>
    </style>
    
    <style name="TapShieldMapClusterTextBlue" parent="@style/TapShieldMapClusterTextBase">
        <item name="android:textColor">@color/ts_brand_light</item>
    </style>
</resources>
