<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >

    <item
        android:state_pressed="true">
        <layer-list>
            <item android:drawable="@drawable/ts_background_circlebutton_normal"/>
            <item android:drawable="@drawable/ts_background_circlebutton_pressed"/>
        </layer-list>
    </item>
    
    <item
        android:state_pressed="false"
        android:state_enabled="true"
        android:drawable="@drawable/ts_background_circlebutton_normal"/>
    
    <item
        android:state_pressed="false"
        android:state_enabled="false"
        android:drawable="@drawable/ts_background_circlebutton_disabled"/>
</selector>
