<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:background="@drawable/ts_background_card"
	    android:layout_marginLeft="@dimen/ts_common_spacing_xs"
	    android:layout_marginRight="@dimen/ts_common_spacing_xs"
	    android:layout_marginTop="@dimen/ts_common_spacing_xxs"
	    android:layout_marginBottom="@dimen/ts_common_spacing_xxs"
	    android:padding="@dimen/ts_common_spacing_s"
	    android:gravity="center_horizontal">
        
        <ImageView
	        android:id="@+id/item_destination_image"
	        android:layout_width="@dimen/ts_item_pickdestination_image_width"
	        android:layout_height="0dp"
	        android:layout_alignParentRight="true"
	        android:layout_alignParentTop="true"
	        android:layout_alignParentBottom="true"
	        android:scaleType="centerCrop"/>

	    <LinearLayout
	        android:id="@+id/item_destination_linear"
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:layout_alignParentLeft="true"
	        android:layout_toLeftOf="@id/item_destination_image"
	        android:orientation="vertical"
	        android:gravity="center_vertical">
	        
	        <TextView
	            android:id="@+id/item_destination_text_name"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:ellipsize="end"
	            android:maxLines="1"
	            android:textSize="@dimen/ts_item_pickdestination_text_name"
	            android:textColor="@color/ts_brand_dark"/>
	        
	        <TextView
	            android:id="@+id/item_destination_text_address"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:textSize="@dimen/ts_item_pickdestination_text_address"
	            android:textColor="@color/ts_gray_dark"/>
	    </LinearLayout>
    </RelativeLayout>
</FrameLayout>
