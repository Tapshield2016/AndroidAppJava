<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="@dimen/ts_common_spacing_xs">
    
    <ImageView
        android:id="@+id/item_arrivalcontact_image"
        android:layout_width="@dimen/ts_entourage_pickarrivalcontacts_image"
        android:layout_height="@dimen/ts_entourage_pickarrivalcontacts_image"
        android:scaleType="centerCrop"
        android:src="@drawable/ts_avatar_default"
        android:background="@drawable/ts_button_rect"/>

    <TextView
        android:id="@+id/item_arrivalcontact_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/item_arrivalcontact_image"
        android:layout_alignLeft="@id/item_arrivalcontact_image"
        android:layout_alignRight="@id/item_arrivalcontact_image"
        android:paddingLeft="@dimen/ts_common_spacing_xxs"
        android:paddingRight="@dimen/ts_common_spacing_xxs"
        android:gravity="center"
        android:textSize="13sp"
        android:maxLines="2"
        android:ellipsize="end"
        android:textColor="@android:color/white"
        android:background="#99000000"/>
</RelativeLayout>
