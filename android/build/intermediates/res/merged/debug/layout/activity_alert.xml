<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ts_background_gradient"
    android:padding="@dimen/ts_common_spacing_s">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_alignParentTop="true"
        android:layout_above="@+id/alert_layout_bottom"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
	        android:layout_width="match_parent"
	        android:layout_height="0dp"
	        android:layout_weight="1"
	        android:text="(123) 123-1231"
	        android:textSize="@dimen/alert_text_number_size"
	        android:textColor="@color/ts_alert_text_color"
	        android:gravity="center"/>
    
	    <TextView
	        android:layout_width="wrap_content"
	        android:layout_height="0dp"
	        android:layout_weight="1"
	        android:text="12:24"
	        android:textSize="@dimen/alert_text_time_size"
	        android:textStyle="bold"
	        android:textColor="@color/ts_alert_text_color"
	        android:drawableLeft="@drawable/ic_launcher"
	        android:gravity="center"/>
	    
	    <TextView
	        android:layout_width="match_parent"
	        android:layout_height="0dp"
	        android:layout_weight="1"
	        android:text="@string/ts_alert_authorities"
	        android:textSize="@dimen/alert_text_authorities_size"
	        android:textColor="@color/ts_alert_authorities_text_color"
	        android:gravity="center"/>
    </LinearLayout>
    
    <LinearLayout
        android:id="@id/alert_layout_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:padding="@dimen/ts_common_spacing_s">
        
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/ts_alert_details"
            android:textColor="@color/ts_alert_text_color"/>
        
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/ts_alert_redial"
            android:textColor="@color/ts_alert_text_color"/>
        
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/ts_common_spacing_s">
            
            <ImageButton
                android:layout_width="@dimen/alert_imagebuttons"
                android:layout_height="@dimen/alert_imagebuttons"
                android:padding="@dimen/ts_common_spacing_xxs"
                android:src="@drawable/ic_launcher"
                android:scaleType="fitCenter"
                android:background="@drawable/ts_button_rect"
                android:layout_gravity="left"/>
            
            <ImageButton
                android:layout_width="@dimen/alert_imagebuttons"
                android:layout_height="@dimen/alert_imagebuttons"
                android:padding="@dimen/ts_common_spacing_xxs"
                android:src="@drawable/ic_launcher"
                android:scaleType="fitCenter"
                android:background="@drawable/ts_button_rect"
                android:layout_gravity="center"/>
            
            <ImageButton
                android:layout_width="@dimen/alert_imagebuttons"
                android:layout_height="@dimen/alert_imagebuttons"
                android:padding="@dimen/ts_common_spacing_xxs"
                android:src="@drawable/ic_launcher"
                android:scaleType="fitCenter"
                android:background="@drawable/ts_button_rect"
                android:layout_gravity="right"/>
        </FrameLayout>
    </LinearLayout>
</RelativeLayout>
