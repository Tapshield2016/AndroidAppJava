<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ts_chat_background">
    
    <View
        android:id="@+id/chat_view_alertoverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/ts_chat_alertoverlay"
        android:visibility="gone"/>
    
    <ListView
        android:id="@+id/chat_list_messages"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_alignParentTop="true"
        android:layout_above="@+id/chat_layout_bottom"
        android:padding="20dp"
        android:clipToPadding="false"
        android:scrollbarStyle="outsideOverlay"
        android:divider="@null"
        />

    <LinearLayout
        android:id="@id/chat_layout_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/ts_chat_usermessage_background"
        android:orientation="horizontal">
        
        <EditText
            android:id="@+id/chat_edit_message"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:inputType="textCapSentences"
            android:hint="@string/ts_chat_edit_hint"
            android:imeOptions="actionSend"/>
        
        <ImageButton
            android:id="@+id/chat_imagebutton_send"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/ts_background_imagebutton"
            android:scaleType="centerInside"
            android:src="@drawable/ic_send"
            android:contentDescription="@string/ts_access_chat_button_send"/>
    </LinearLayout>
</RelativeLayout>
