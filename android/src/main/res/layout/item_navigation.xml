<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/item_navigation_height"
    android:orientation="horizontal"
    android:gravity="center"
    android:layout_marginLeft="@dimen/activity_horizontal_margin">
    
    <ImageView
        android:id="@+id/item_navigation_image"
        android:layout_width="@dimen/item_navigation_image"
        android:layout_height="@dimen/item_navigation_image"
        android:scaleType="fitCenter"/>
    
    <TextView
        android:id="@+id/item_navigation_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:textColor="@color/ts_item_navigation_text_color"
        android:textSize="@dimen/item_navigation_text_size"
        android:gravity="center_vertical|left"/>
    
</LinearLayout>
