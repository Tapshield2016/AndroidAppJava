<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:orientation="vertical">
        
        <Button
            android:id="@+id/dialog_talk_options_org"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Campus Police Plus"
            android:gravity="left|center_vertical"
            android:drawableLeft="@drawable/ic_action_call_suboption"
            android:background="@drawable/ts_background_button_red"
            android:textColor="@android:color/white"
            android:padding="@dimen/ts_common_spacing_m"
            android:layout_margin="@dimen/ts_common_spacing_xxs"
            android:drawablePadding="10dp"/>
        
        <Button
            android:id="@+id/dialog_talk_options_911"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Dial 9-1-1"
            android:gravity="left|center_vertical"
            android:drawableLeft="@drawable/ts_icon_911"
            android:background="@drawable/ts_background_button_red"
            android:textColor="@android:color/white"
            android:padding="@dimen/ts_common_spacing_m"
            android:layout_margin="@dimen/ts_common_spacing_xxs"
            android:drawablePadding="10dp"/>
        
        <Button
            android:id="@+id/dialog_talk_options_chat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Chat"
            android:gravity="left|center_vertical"
            android:drawableLeft="@drawable/ts_icon_chat"
            android:background="@drawable/ts_background_button_blue"
            android:textColor="@android:color/white"
            android:padding="@dimen/ts_common_spacing_m"
            android:layout_margin="@dimen/ts_common_spacing_xxs"
            android:drawablePadding="10dp"/>
    </LinearLayout>
</FrameLayout>
