<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/ts_entourage_pickroute_routeoverview_height"
    android:padding="@dimen/ts_common_spacing_xs">

	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:orientation="vertical"
	    android:background="@drawable/ts_background_card">
	
	    <TextView
	        android:id="@+id/fragment_pickroute_route_text_eta"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:padding="@dimen/ts_common_spacing_xs"
	        android:gravity="center"
	        android:textSize="@dimen/ts_entourage_pickroute_routeoverview_eta"
	        android:textColor="@color/ts_brand_dark"/>
	    
	    <TextView
	        android:id="@+id/fragment_pickroute_route_text_summary"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:gravity="center"
	        android:textSize="@dimen/ts_entourage_pickroute_routeoverview_summary"
            android:textColor="@color/ts_gray_dark"/>
	
	</LinearLayout>

</RelativeLayout>