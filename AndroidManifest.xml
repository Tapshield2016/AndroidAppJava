<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tapshield.android"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="19" />
    
    <!-- opengl required by google maps for android -->
    <uses-feature
        android:glEsVersion="0x00020000"
        android:required="true"/>

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.FLASHLIGHT" />
    <uses-permission android:name="android.permission.CAMERA" />
    
    <!-- extra permissions required by twilio -->
    
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.MODIFY_AUDIO_SETTINGS" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    
    <!-- permission required by google maps for android -->
    
    <uses-permission android:name="com.google.android.providers.gsf.permission.READ_GSERVICES"/>
    
    <!-- permissions for optimized gcm functionality -->
    
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="com.google.android.c2dm.permission.RECEIVE" />

    <permission
        android:name="com.tapshield.android.permission.C2D_MESSAGE"
        android:protectionLevel="signature" />

    <uses-permission android:name="com.tapshield.android.permission.C2D_MESSAGE" />
    
    <!-- forcing the usage of a smart phone via telephony service -->
    <!-- warning: is already implicitly required by permission CALL_PHONE -->
    <uses-feature android:name="android.hardware.telephony" />
    
    <!-- required set to false to avoid implicit filtering via permission CAMERA -->
    <uses-feature android:name="android.hardware.camera" android:required="false" />
    
    <!-- permission ACCESS_FINE_LOCATION implicitly
            required hardware.location and hardware.location.gps -->
    
    <application
        android:name="com.tapshield.android.app.TapShieldApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.Holo.Light.DarkActionBar" >
        
        <!-- tag required by google maps for android -->
        <meta-data
            android:name="com.google.android.maps.v2.API_KEY"
            android:value="AIzaSyCOLa7om8_AGznekq6jV6pNrCXTCj_JM3E" />
        
        <!-- ACTIVITIES -->
       
        <!-- library application to handle image cropping -->
        <activity
            android:name="eu.janmuller.android.simplecropimage.CropImage"/>
        
        <activity
            android:name="com.tapshield.android.ui.activity.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity
            android:name="com.tapshield.android.ui.activity.WelcomeActivity" />
        
        <activity
            android:name="com.tapshield.android.ui.activity.LoginActivity" />
        
        <activity
            android:name="com.tapshield.android.ui.activity.EmergencyActivity" />
        
        <!-- SERVICES -->
        <service
            android:name="com.twilio.client.TwilioClientService"
            android:exported="false" />
        <service
            android:name="com.tapshield.android.service.ChatUpdateService"
            android:exported="false" />
        <service
            android:name="com.tapshield.android.service.AlertIdUpdateService"
            android:exported="false" />
        
        <!-- BROADCAST RECEIVERS -->
        <receiver
            android:exported="false"
            android:name="com.tapshield.android.receiver.EmergencyReceiver">
            <intent-filter>
                <action android:name="com.tapshield.android.action.EMERGENCY" />
            </intent-filter>
        </receiver>
        
        <receiver
            android:exported="false"
            android:name="com.tapshield.android.receiver.PushMessageReceiver"
            android:permission="com.google.android.c2dm.permission.SEND" >
            <intent-filter>
                <action android:name="com.google.android.c2dm.intent.RECEIVE" />

                <category android:name="com.tapshield.android" />
            </intent-filter>
            <intent-filter>
                <action android:name="com.google.android.c2dm.intent.REGISTRATION" />

                <category android:name="com.tapshield.android" />
            </intent-filter>
        </receiver>
        
    </application>

</manifest>
